{
  "id": "se.lksystems.mylk",
  "version": "1.2.4",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#0082c8",
  "name": {
    "en": "LK Systems",
    "sv": "LK Systems"
  },
  "description": {
    "en": "For the simpler, smarter everyday",
    "sv": "För en enklare och smartare vardag"
  },
  "category": [
    "climate"
  ],
  "tags": {
    "en": [
      "LK",
      "ICS",
      "ICS.2",
      "Thermostat",
      "Underfloor heating"
    ],
    "sv": [
      "LK",
      "ICS",
      "ICS.2",
      "Termostat",
      "Golvvärme"
    ]
  },
  "permissions": [],
  "images": {
    "xlarge": "/assets/images/xlarge.jpg",
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Christian Ek",
    "email": "christian.ek@live.se"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "christianoak"
      }
    }
  },
  "support": "mailto:christian.ek@live.se",
  "drivers": [
    {
      "id": "thermostat",
      "name": {
        "en": "LK ICS.2 Thermostat",
        "sv": "LK ICS.2 Termostat"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_battery"
      ],
      "capabilitiesOptions": {
        "measure_temperature": {
          "decimals": 1
        }
      },
      "energy": {
        "batteries": [
          "AAA",
          "AAA",
          "AAA"
        ]
      },
      "images": {
        "large": "/drivers/thermostat/assets/images/large.jpg",
        "small": "/drivers/thermostat/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Update device interval",
            "sv": "Uppdateringsintervall för hämtning av data"
          },
          "children": [
            {
              "id": "interval",
              "type": "number",
              "label": {
                "en": "minutes",
                "sv": "minuter"
              },
              "value": 1,
              "min": 1,
              "max": 59
            }
          ]
        }
      ]
    },
    {
      "id": "wss_master_unit",
      "name": {
        "en": "LK Master Unit WSS",
        "sv": "LK Huvudenhet WSS"
      },
      "class": "other",
      "capabilities": [
        "onoff",
        "measure_pressure"
      ],
      "capabilitiesOptions": {
        "measure_pressure": {
          "decimals": 1,
          "units": {
            "en": "bar"
          }
        }
      },
      "images": {
        "large": "/drivers/wss_master_unit/assets/images/large.jpg",
        "small": "/drivers/wss_master_unit/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Update device interval",
            "sv": "Uppdateringsintervall för hämtning av data"
          },
          "children": [
            {
              "id": "interval",
              "type": "number",
              "label": {
                "en": "minutes",
                "sv": "minuter"
              },
              "value": 1,
              "min": 1,
              "max": 59
            }
          ]
        }
      ]
    },
    {
      "id": "water_detector",
      "name": {
        "en": "LK Leak Detector WSS",
        "sv": "LK Läckagedetektor WSS"
      },
      "class": "other",
      "capabilities": [
        "alarm_water",
        "measure_temperature",
        "alarm_battery"
      ],
      "energy": {
        "batteries": [
          "AAA",
          "AAA"
        ]
      },
      "images": {
        "large": "/drivers/water_detector/assets/images/large.jpg",
        "small": "/drivers/water_detector/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Update device interval",
            "sv": "Uppdateringsintervall för hämtning av data"
          },
          "children": [
            {
              "id": "interval",
              "type": "number",
              "label": {
                "en": "seconds",
                "sv": "sekunder"
              },
              "value": 10,
              "min": 10,
              "max": 3600
            }
          ]
        }
      ]
    }
  ]
}